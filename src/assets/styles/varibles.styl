/*图片比例显示*/
ShowScale(scale=28%,color=#cacaca){
  overflow:hidden
  width:100%
  height :0
  padding-bottom :30%
  background-color:#cacaca
}
/*文字超出省略*/
TextHidden(line = 2){
  overflow :hidden
  display:-webkit-box
  -webkit-box-orient:vertical
  -webkit-line-clamp:line
  text-overflow: ellipsis
}

/*图片容器*/
ImgContainer(width=50%,height=50%){
  width :width
  height :height
}

